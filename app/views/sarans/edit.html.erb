<h1>Editing saran</h1>

<%= error_messages_for :saran %>

<% form_for(@saran) do |f| %>
  <p>
    <b>Nama</b><br />
    <%= f.text_field :nama %>
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <b>Subjek</b><br />
    <%= f.text_field :subjek %>
  </p>

  <p>
    <b>Komentar</b><br />
    <%= f.text_area :komentar %>
  </p>

  <p>
    <b>Posted at</b><br />
    <%= f.datetime_select :posted_at %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @saran %> |
<%= link_to 'Back', sarans_path %>
