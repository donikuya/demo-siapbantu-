<h1>Add info</h1>

<%= error_messages_for :info %>

<% form_for(@info) do |f| %>
  <p>
    <b>Subjek</b><br />
    <%= f.text_field :subjek %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <b>Author</b><br />
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<p><%= link_to 'Back', infos_path %></p>
